procedure TForm2.N1Click(Sender: TObject);
    var Line : integer;
        s, s1 : string;
begin
    try
      SelectMemoLine(Memo1);
    //  Edit1.Text :=  IntToStr(Memo1.CaretPos.Y);
     // Edit1.Text := IntToStr(beta);
        with Memo1 do
        begin
              Line      := Perform(EM_LINEFROMCHAR, SelStart, 0) ;
              SelStart  := Perform(EM_LINEINDEX, Line, 0) ; //длина строки
              SelLength := Length(Lines[Line]);             //выделение длины строки по индексу
            //  Edit1.Text :=  IntToStr(Memo1.CaretPos.Y);  //индекс строки
           //   Memo1.CaretPos.Y
             // N1Click(Sender);

            s := IntToStr(Perform(EM_LINEFROMCHAR, SelStart, 0));
            s1 :=  Memo1.Lines[StrToInt(s)];
           // Edit1.Text :=        copy(s1,1,pos(' ',s1)-1);


            ADOQuery2.SQL.Clear;
            ADOQuery2.SQL.Add('DELETE Rasshivka WHERE [Регистрация расшивки] = ' + quotedstr(copy(s1,1,pos(' ',s1)-1)) );
            ADOQuery2.ExecSQL;

            Memo1.Lines.Delete(Perform(EM_LINEFROMCHAR, SelStart, 0));
        end;

    finally

    end;
end;




