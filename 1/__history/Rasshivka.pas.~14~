uses Registration;


function GetUserFromWindows: string;
var
  Name : string;
  NameLen : Dword;
begin
  NameLen := 255;
  SetLength(Name, NameLen);
  if GetUserName(PChar(Name), NameLen) then
    Result := Copy(Name,1,NameLen - 1)
  else
    Result := 'Не вышло';
end;

procedure SelectMemoLine(Memo : TCustomMemo) ;
var
   Line : integer;
begin
   with Memo do
   begin
     Line      := Perform(EM_LINEFROMCHAR, SelStart, 0) ;
     SelStart  := Perform(EM_LINEINDEX, Line, 0) ;
     SelLength := Length(Lines[Line]);
    // Form2.Edit1.Text := IntToStr(Length(Lines[Line]));
   // Memo.Lines.Delete(Length(Lines[Line]));
   end;
end;

procedure TForm2.Edit1KeyPress(Sender: TObject; var Key: Char);
var
  today : TDateTime;
  LA,LB,LI,LD,LF,PB,LRU, st, s : string;
begin
        today := Now;

        LA:= 'LA';
        LB:= 'LB';
        LI:= 'LI';
        LD:= 'LD';
        PB:= 'PB';
        LF:= 'LF';

          if  ((copy(Edit1.Text, 0, 2) <> LA) and (Key = #13)) and ((copy(Edit1.Text, 0, 2) <> LB) and (Key = #13)) and
              ((copy(Edit1.Text, 0, 2) <> LI) and (Key = #13)) and ((copy(Edit1.Text, 0, 2) <> LD) and (Key = #13)) and
              ((copy(Edit1.Text, 0, 2) <> PB) and (Key = #13)) and ((copy(Edit1.Text, 0, 2) <> LF) and (Key = #13)) then

          begin
                        ShowMessage('Не правильно введен штрих-код № группировки');
                        key:=#0;
                        Edit1.SetFocus;
                        Edit1.SelectAll;

           end;

         if Key = #13 then
         begin

           ADOQuery2.Close;

           ADOQuery2.SQL.Clear;
           ADOQuery2.SQL.ADD('SELECT Rasshivka.[Регистрация расшивки] FROM Rasshivka, Registration WHERE' + quotedstr(edit1.Text) + ' = Registration.[ШК Группировки]');
           ADOQuery2.Open;

           if ADOQuery2.Eof then
           begin
                  ADOQuery2.Close;

                  ADOQuery2.ExecSQL;

                  ADOQuery2.SQL.Clear;
                  ADOQuery2.SQL.Add('SELECT * FROM dbo.Rasshivka');
                  ADOQuery2.Open;

                  ShowMessage('Данная группировка не зарегестрирована');

                  key:=#0;
           end
           {else
           begin
               ADOQuery2.Close;

               ADOQuery2.SQL.Clear;
               ADOQuery2.SQL.ADD('SELECT [Регистрация расшивки] FROM Rasshivka WHERE [Регистрация расшивки] = '+quotedstr(edit1.Text)+'');
               ADOQuery2.Open;

               if not ADOQuery2.Eof then
               begin

                ADOQuery2.Close;

                ADOQuery2.ExecSQL;

                ADOQuery2.SQL.Clear;
                ADOQuery2.SQL.Add('SELECT * FROM dbo.Rasshivka');
                ADOQuery2.Open;

                ShowMessage('Данная группировка уже взята в работу');

                key:=#0;
               end   }
                else
                     begin

                     ADOQuery2.Close;

                     ADOQuery2.SQL.Add('INSERT INTO Rasshivka ([Регистрация расшивки], [Имя пользователя])');
                     ADOQuery2.SQL.Add('VALUES (' + quotedstr(Edit1.Text) + ',' + quotedstr(GetUserFromWindows) + ')' );

                     ADOQuery2.ExecSQL;
                     ADOQuery2.SQL.Clear;
                     ADOQuery2.SQL.Add('SELECT * FROM Rasshivka');
                     ADOQuery2.Open;

                     Memo1.Lines.Add(Edit1.Text + '  ' + DateToStr(today) + ' ' + TimeToStr(today));
                     s := Memo1.Lines.GetText;
                     Edit1.Text := s;
                     key:=#0;

                     Edit1.Clear;
                     Label2.Caption := ' Регистратор - '+ GetUserFromWindows + ' группировок: ' + inttostr(Memo1.Lines.Count);
                     end;
          // end;
         end;
end;



